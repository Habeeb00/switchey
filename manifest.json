{
  "manifest_version": 3,
  "name": "Google Account Extension",
  "version": "1.0",
  "permissions": ["declarativeNetRequest", "storage", "webNavigation", "tabs"],
  "host_permissions": ["*://*.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  }
}
